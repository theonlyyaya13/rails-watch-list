<h1><%= @list.name %></h1>

<h2>Movies in this list:</h2>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <strong><%= bookmark.movie.title %></strong>: <%= bookmark.comment %>
      <%= link_to 'Remove', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>

<%= link_to 'Back to lists', lists_path %>
<%= link_to 'Add a Bookmark', new_list_bookmark_path(@list) %>
